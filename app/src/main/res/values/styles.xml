<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- fragment_login -->
    <style name="frag_login_chk_tv_style">
        <item name="android:textSize">@dimen/_11ssp</item>
        <item name="android:padding">@dimen/_2sdp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_below">@+id/fragment_login_et_password</item>
    </style>

    <!-- fragment_register -->
    <style name="frag_register_et_style">
        <item name="android:background">@drawable/round_edit_text</item>
        <item name="android:textColor">@color/red_text_color</item>
        <item name="android:textColorHint">@color/red_text_color</item>
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:drawablePadding">@dimen/_5sdp</item>
        <item name="android:layout_marginBottom">@dimen/_10sdp</item>
        <item name="android:paddingBottom">@dimen/_7sdp</item>
        <item name="android:paddingTop">@dimen/_7sdp</item>

    </style>

    <style name="frag_register_sp_style">
        <item name="android:layout_alignParentStart">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:layout_marginBottom">@dimen/_10sdp</item>
        <item name="android:paddingStart">@dimen/_25sdp</item>
        <item name="android:paddingEnd">@dimen/_25sdp</item>
        <item name="android:gravity">start</item>
    </style>

    <!--    item_custom_donation    -->
    <style name="item_custom_donation_tv">
        <item name="android:layout_marginStart">@dimen/_40sdp</item>
        <item name="android:layout_marginEnd">@dimen/_24sdp</item>
        <item name="android:layout_marginTop">@dimen/_4sdp</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/red_text_color</item>
        <item name="android:textSize">@dimen/_10ssp</item>

    </style>

    <!--    fragment_create_donation    -->

    <!--    fragment_post   -->

    <!-- fragment_forgot_pass -->

    <!-- fragment_reset_pass -->

    <!-- Global -->
    <style name="btn_confirm">
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:textColor">@color/red_text_color</item>
        <item name="android:background">@drawable/round_gray_btn</item>
        <item name="textAllCaps">@style/disable_caps</item>
    </style>

    <style name="et_style">
    <item name="android:background">@drawable/round_edit_text</item>
    <item name="android:textColor">@color/red_text_color</item>
    <item name="android:textColorHint">@color/red_text_color</item>
    <item name="paddingEnd">@dimen/_5sdp</item>
    <item name="paddingStart">@dimen/_5sdp</item>
    <item name="android:paddingTop">@dimen/_10sdp</item>
    <item name="android:textSize">@dimen/_15ssp</item>
    <item name="android:gravity">start</item>
    </style>

    <style name="disable_caps" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="text_input">
        <item name="android:textColor">@color/red_text_color</item>
        <item name="android:textColorHint">@color/red_text_color</item>
        <item name="android:layout_marginTop">@dimen/_4sdp</item>
        <item name="android:layout_marginBottom">@dimen/_4sdp</item>
        <item name="android:layout_marginStart">@dimen/_8sdp</item>
        <item name="android:layout_marginEnd">@dimen/_8sdp</item>
    </style>

    <style name="text_input_edit">
        <item name="background">@null</item>
        <item name="android:textColor">@color/red_text_color</item>
        <item name="android:textColorHint">@color/red_text_color</item>
        <item name="android:drawablePadding">@dimen/_2sdp</item>
        <item name="android:padding">@dimen/_8sdp</item>
    </style>





</resources>
