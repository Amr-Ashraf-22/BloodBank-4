<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activity.HomeCycleActivity"
    >

    <FrameLayout
        android:id="@+id/activity_home_cycle_fl_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true"
        android:layout_above="@+id/activity_home_cycle_bn_nav"
         />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/activity_home_cycle_bn_nav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        app:itemBackground="@drawable/nav_selected_page"
        app:menu="@menu/bottom_navigation"
        app:itemIconTint="@color/white"
        android:background="@color/colorPrimaryDark"
        app:labelVisibilityMode="unlabeled"
        android:elevation="@dimen/_3sdp"
        />

</RelativeLayout>
