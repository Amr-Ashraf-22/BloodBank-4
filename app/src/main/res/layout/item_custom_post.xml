<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_140sdp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="@dimen/_16sdp"
    app:cardCornerRadius="@dimen/_20sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ImageView
            android:id="@+id/item_custom_post_iv_post_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/rectangle_unchecked"
            />

        <RelativeLayout
            android:id="@+id/item_custom_post_rl_favorite"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_margin="@dimen/_10sdp"
            android:clickable="true"
            android:focusable="true"
            android:background="@drawable/post_faivorite_bg"
            >

            <ImageView
                android:id="@+id/item_custom_post_iv_favorite"
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:src="@drawable/ic_favorite_strock"
                android:layout_centerInParent="true"
                />


        </RelativeLayout>

        <TextView
            android:id="@+id/item_custom_post_tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:padding="@dimen/_5sdp"
            android:background="@drawable/post_title_bg"
            android:alpha="0.8"
            />

    </RelativeLayout>

</androidx.cardview.widget.CardView>