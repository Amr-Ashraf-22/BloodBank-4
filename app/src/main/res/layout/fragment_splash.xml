<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/frag_splash_bg_color">

    <ImageView
        android:id="@+id/fragment_splash_i_v_top_img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_400sdp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:src="@drawable/splash_top_img"
        android:layout_marginTop="@dimen/_minus60sdp" />

    <ImageView
        android:id="@+id/fragment_splash_i_v_red_logo"
        android:layout_width="@dimen/_20sdp"
        android:layout_height="@dimen/_250sdp"
        android:layout_alignTop="@+id/fragment_splash_i_v_top_img"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/_65sdp"
        android:layout_marginEnd="@dimen/_41sdp"
        android:layout_marginTop="@dimen/_200sdp"
        android:layout_marginBottom="@dimen/_170sdp"
        android:src="@drawable/ic_red_logo" />

    <ImageView
        android:id="@+id/fragment_splash_i_v_app_title"
        android:layout_width="@dimen/_150sdp"
        android:layout_height="@dimen/_80sdp"
        android:layout_below="@+id/fragment_splash_i_v_top_img"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="@dimen/_30sdp"
        android:layout_marginEnd="@dimen/_82sdp"
        android:layout_marginTop="@dimen/_5sdp"
        android:src="@drawable/ic_bloodbank_title" />

    <ImageView
        android:id="@+id/fragment_splash_i_v_bottom_img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_400sdp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_minus60sdp"
        android:src="@drawable/splash_bottom_img" />

</RelativeLayout>