<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/fragment_contact_us_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimaryDark"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/fragment_contact_us_tool_bar"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp"
            android:gravity="center"
            android:layout_marginEnd="@dimen/_45sdp"
            />
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/fragment_contact_us_toolbar"
        android:padding="@dimen/_15sdp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/fragment_contact_us_tv_phone"
            android:textSize="@dimen/_20sdp"
            android:textColor="@color/fragment_contact_us_tv_static"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_2sdp"
            android:background="@color/list_view_seperator_line_color"
            />

        <LinearLayout
            android:id="@+id/fragment_contact_us_ll_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp">

            <ImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_gravity="center"
                android:src="@drawable/ic_contact_us_phone"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red_text_color"
                android:textSize="@dimen/_15ssp"
                android:text="@string/fragment_contact_us_tv_phone_number"
                android:layout_marginStart="@dimen/_5sdp"
                />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/fragment_contact_us_tv_email"
            android:textSize="@dimen/_20sdp"
            android:textColor="@color/fragment_contact_us_tv_static"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_2sdp"
            android:background="@color/list_view_seperator_line_color"
            />

        <LinearLayout
            android:id="@+id/fragment_contact_us_ll_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackground"
            android:paddingTop="@dimen/_10sdp"
            android:paddingBottom="@dimen/_10sdp">

            <ImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_gravity="center"
                android:src="@drawable/contact_us_email"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/red_text_color"
                android:textSize="@dimen/_15ssp"
                android:text="@string/fragment_contact_us_tv_email_address"
                android:layout_marginStart="@dimen/_10sdp"
                />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/_2sdp"
            android:background="@color/list_view_seperator_line_color"
            />

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            >

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:id="@+id/fragment_contact_us_img_v_facebook"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:src="@drawable/contact_us_facebook"
                    />

                <ImageView
                    android:id="@+id/fragment_contact_us_img_v_instegram"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:src="@drawable/contact_us_instegram"
                    />
            </TableRow>

            <TableRow
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <ImageView
                    android:id="@+id/fragment_contact_us_img_v_twitter"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:src="@drawable/contact_us_twitter"
                    />

                <ImageView
                    android:id="@+id/fragment_contact_us_img_v_youtube"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:scaleType="fitXY"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground"
                    android:src="@drawable/contact_us_youtube"
                    />

            </TableRow>

        </TableLayout>

        <EditText
            android:id="@+id/fragment_contact_us_et_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_15ssp"
            android:padding="@dimen/_12sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:hint="@string/fragment_contact_us_et_msg_title"
            android:textColorHint="@color/notification_alert_color"
            android:textColor="@color/notification_alert_color"
            style="@style/frag_register_et_style"
            />

        <EditText
            android:id="@+id/fragment_contact_us_et_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/_15ssp"
            android:hint="@string/fragment_contact_us_et_msg_content"
            android:textColorHint="@color/notification_alert_color"
            android:textColor="@color/notification_alert_color"
            android:lines="4"
            android:padding="@dimen/_12sdp"
            android:gravity="start"
            style="@style/frag_register_et_style"
            />

        <Button
            android:id="@+id/fragment_contact_us_btn_send"
            android:layout_width="@dimen/_111sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="@string/fragment_create_donation_btn_send"
            android:background="@drawable/round_red_btn"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="@dimen/_15ssp"
            android:padding="@dimen/_10sdp"/>

    </LinearLayout>

</RelativeLayout>